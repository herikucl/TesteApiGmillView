@model IEnumerable<TesteApiGmillView.Models.EmployeeView>

@{
    ViewData["Title"] = "Employees";
}

<h1>Employees participating in this project</h1>

<p>
    <a asp-action="CreateEmployee">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Document)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.CompanyId)
            </td>
            <td>
                    @Html.ActionLink("Edit", "EditEmployee", new { id=item.Id, name = item.Name,companyId = item.CompanyId , document = item.Document,phone = item.Phone}) |
                    @Html.ActionLink("Details", "DetailEmployee", new { id=item.Id, name = item.Name, document = item.Document,phone = item.Phone}) |
                    @Html.ActionLink("Delete", "DeleteEmployee", new {  id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
